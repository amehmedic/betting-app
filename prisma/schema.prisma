// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // ‚Üê switch to "postgresql" later easily
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  username      String?  @unique
  avatarUrl     String?
  role          String   @default("user")
  createdAt     DateTime @default(now())

  accounts      Account[]
  sessions      Session[]
  wallets       Wallet[]
  blackjackGames BlackjackGame[]
  pokerQueues   PokerQueue[]
  pokerRounds   PokerRoundPlayer[]
  pokerSeats    PokerSeat[]
  sportsBets    SportsBet[]
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String
  currency  String   // "PLAY"
  balance   BigInt   @default(0)
  held      BigInt   @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  blackjackGames BlackjackGame[]
  ledger    LedgerEntry[]
}

model LedgerEntry {
  id        String   @id @default(cuid())
  walletId  String
  amount    BigInt   // +credit / -debit
  kind      String   // "deposit" | "bet_stake" | "winnings" | ...
  refId     String?
  createdAt DateTime @default(now())
  wallet    Wallet   @relation(fields: [walletId], references: [id])
}

model BlackjackGame {
  id             String   @id @default(cuid())
  userId         String
  walletId       String
  bet            BigInt
  deck           Json
  playerHand     Json
  playerHands    Json
  dealerHand     Json
  playerActions  Json
  handBets       Json
  dealerActions  Json
  activeHand     Int      @default(0)
  status         String   @default("player")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  wallet Wallet @relation(fields: [walletId], references: [id])

  @@index([userId])
  @@index([walletId])
}

// --- NextAuth standard models ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Lucky6Round {
  roundId         Int   @id
  balls           Json
  completionOrder Json
  createdAt       DateTime @default(now())
}

model PokerQueue {
  id         String   @id @default(cuid())
  userId     String
  buyInCents Int
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([buyInCents, createdAt])
  @@index([userId])
}

model PokerRound {
  id             String   @id @default(cuid())
  buyInCents     Int
  potCents       Int
  communityCards Json
  winnerUserIds  Json
  createdAt      DateTime @default(now())

  players PokerRoundPlayer[]
}

model PokerRoundPlayer {
  id        String   @id @default(cuid())
  roundId   String
  userId    String
  hand      Json
  result    String
  createdAt DateTime @default(now())

  round PokerRound @relation(fields: [roundId], references: [id])
  user  User       @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([roundId])
}

model PokerTable {
  id         String   @id @default(cuid())
  buyInCents Int      @unique
  state      Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  seats PokerSeat[]
}

model PokerSeat {
  id         String   @id @default(cuid())
  tableId    String
  userId     String
  seatIndex  Int
  stackCents Int
  createdAt  DateTime @default(now())

  table PokerTable @relation(fields: [tableId], references: [id])
  user  User       @relation(fields: [userId], references: [id])

  @@unique([tableId, seatIndex])
  @@unique([tableId, userId])
  @@index([userId])
}

model SportsLeague {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  sport     String   @default("football")
  createdAt DateTime @default(now())

  teams   SportsTeam[]
  matches SportsMatch[]
}

model SportsTeam {
  id       String @id @default(cuid())
  name     String
  slug     String @unique
  leagueId String

  league      SportsLeague @relation(fields: [leagueId], references: [id])
  homeMatches SportsMatch[] @relation("HomeTeam")
  awayMatches SportsMatch[] @relation("AwayTeam")
}

model SportsMatch {
  id         String   @id @default(cuid())
  externalId String?  @unique
  leagueId   String
  homeTeamId String
  awayTeamId String
  startTime  DateTime
  status     String   @default("scheduled")
  result     String?
  oddsHome   Int
  oddsDraw   Int
  oddsAway   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  league   SportsLeague @relation(fields: [leagueId], references: [id])
  homeTeam SportsTeam   @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam SportsTeam   @relation("AwayTeam", fields: [awayTeamId], references: [id])
  bets     SportsBet[]

  @@index([leagueId, startTime])
}

model SportsBet {
  id          String   @id @default(cuid())
  userId      String
  matchId     String
  pick        String
  odds        Int
  stakeCents  Int
  payoutCents Int?
  status      String   @default("pending")
  settledAt   DateTime?
  createdAt   DateTime @default(now())

  user  User        @relation(fields: [userId], references: [id])
  match SportsMatch @relation(fields: [matchId], references: [id])

  @@index([userId, createdAt])
  @@index([matchId])
}
