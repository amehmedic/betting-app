// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // ‚Üê switch to "postgresql" later easily
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  role          String   @default("user")
  createdAt     DateTime @default(now())

  accounts      Account[]
  sessions      Session[]
  wallets       Wallet[]
  blackjackGames BlackjackGame[]
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String
  currency  String   // "PLAY"
  balance   BigInt   @default(0)
  held      BigInt   @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  blackjackGames BlackjackGame[]
  ledger    LedgerEntry[]
}

model LedgerEntry {
  id        String   @id @default(cuid())
  walletId  String
  amount    BigInt   // +credit / -debit
  kind      String   // "deposit" | "bet_stake" | "winnings" | ...
  refId     String?
  createdAt DateTime @default(now())
  wallet    Wallet   @relation(fields: [walletId], references: [id])
}

model BlackjackGame {
  id             String   @id @default(cuid())
  userId         String
  walletId       String
  bet            BigInt
  deck           Json
  playerHand     Json
  dealerHand     Json
  playerActions  Json
  dealerActions  Json
  status         String   @default("player")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  wallet Wallet @relation(fields: [walletId], references: [id])

  @@index([userId])
  @@index([walletId])
}

// --- NextAuth standard models ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}
